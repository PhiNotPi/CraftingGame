# Keywords (case-insensitive): cat opt str real bool true false
# Key-characters: semicolon, curly braces, octothorpe, double quotes, comma
# Reserved characters: colon
# Newlines are optional and can be replaced by a space
# Semicolons after field names or before closing braces are optional

str name;
cat shape {
  real volume;
  real capacity;
  opt log {
    volume 1.4;
    capacity 0;
  }
  opt block {
    volume 0.5;
    capacity 0;
  }
  opt box {
    volume 0.3;
    capacity 1;
  }
}
cat material {
  bool flammable;
  real density;
  cat color {
    opt red,orange,yellow,green,blue,violet,white,grey,black,brown{opt reddish-brown},transparent;
  }
  opt wood {
    density 0.75;
    flammable true;
    color brown;
    opt mahogany{reddish-brown},oak,maple,pine;
  }
  opt metal {
    flammable false;
    color grey;
    density 8;
    opt iron {density 7.87}
    opt zinc {density 7.13}
    opt silver {density 10.49}
    opt aluminum {density 2.74}
    opt steel {density 7.8}
    opt gold {density 19.32; yellow}
  }
  opt air {
    flammable false;
    transparent;
    density 0.001205;
    opt hydrogen{flammable true},oxygen{flammable true}
  }
  opt stone {
    flammable false;
    color grey;
    density 2.5;
    opt sandstone {
      yellow; #?
      density 2.40;
    }
    opt limestone {density 2.91}
    opt granite {density 2.45}
    opt marble {density 2.65; white}
  }
}
